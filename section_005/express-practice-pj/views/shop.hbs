<main>
    {{#if hasProducts}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="http://unblast.com/wp-content/uploads/2020/02/Softcover-Book-Mockup.jpg" alt="Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$29.99</h2>
                        <p class="product__description">A very interesting book about so many even more interesting!</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            {{/each}}
        </div>
    {{else}}
        <p>No products found. Please add some.</p>
    {{/if}}
</main>
